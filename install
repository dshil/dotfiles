#! /bin/bash

set -xe

dir=$(pwd)

# Setup for vim
ln -s -f $dir/vim $HOME/.vim
ln -s -f $dir/vim/vimrc $HOME/.vimrc

ln -s -f $dir/gitconfig $HOME/.gitconfig

ln -s -f $dir/aliases $HOME/.aliases

ln -s -f $dir/x/xinitrc $HOME/.xinitrc
ln -s -f $dir/x/Xresources $HOME/.Xresources

ln -s -f $dir/i3/i3 $HOME/.config/i3/config
ln -s -f $dir/.mutt/muttrc $HOME/.muttrc

xrdb -merge $HOME/.Xresources
