IMAPAccount dshil
    Host imap.fastmail.com
    User dshil@fastmail.com
    PassCmd "gpg2 -q --for-your-eyes-only --no-tty -d ~/.cert/mail/dshil.gpg"
    SSLType IMAPS
    SSLVersions TLSv1.2

IMAPStore dshil-remote
    Account dshil

MaildirStore dshil-local
    Path ~/Sync/mail/dshil/
    Inbox ~/Sync/mail/dshil/inbox

Channel dshil-inbox
    Master ":dshil-remote:INBOX"
    Slave  ":dshil-local:inbox"
    Create Slave
    SyncState *
    Sync All
    Expunge Both

Channel dshil-sent
    Master ":dshil-remote:Sent"
    Slave  ":dshil-local:sent"
    Create Slave
    SyncState *
    Sync All
    Expunge Both

Channel dshil-drafts
    Master ":dshil-remote:Drafts"
    Slave  ":dshil-local:drafts"
    Create Slave
    SyncState *
    Sync All
    Expunge Both

Channel dshil-archive
    Master ":dshil-remote:Archive"
    Slave  ":dshil-local:archive"
    Create Slave
    SyncState *
    Sync All
    Expunge Both

Channel dshil-spam
    Master ":dshil-remote:Spam"
    Slave  ":dshil-local:spam"
    Create Slave
    SyncState *
    Sync All
    Expunge Both

Channel dshil-trash
    Master ":dshil-remote:Trash"
    Slave  ":dshil-local:trash"
    Create Slave
    SyncState *
    Sync All
    Expunge Both

