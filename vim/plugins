" Plugins Settings {{{

" Plugin: 'vimwiki/vimwiki'
let g:vimwiki_list = [{'path': '$HOME/Sync/doc', 'index': 'main'},
            \ {'path': '$HOME/dev', 'syntax': 'markdown', 'ext': '.md'}]

" Plugin: 'mileszs/ack.vim'
let g:ackprg = 'ag --vimgrep --smart-case'

" Plugin: 'junegunn/fzf.vim'
